{
  "name": "apollo-server-gql",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "env-cmd .env.dev nodemon --exec \"ts-node src/index.ts\" ",
    "debug": "env-cmd .env.dev nodemon --exec \"ts-node --inspect --debug-brk src/index.ts\" ",
    "build": "tsc",
    "start:js": "env-cmd .env.dev node dist/index.js",
    "generate": "gql-gen",
    "generate:watch": "gql-gen --watch",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "apollo-server-express": "2.4.8",
    "bcrypt-nodejs": "0.0.3",
    "cors": "2.8.5",
    "express": "4.16.4",
    "graphql": "14.1.1",
    "graphql-import": "0.7.1",
    "graphql-iso-date": "3.6.1",
    "morgan": "1.9.1",
    "pg": "7.8.2",
    "reflect-metadata": "0.1.13",
    "typeorm": "0.2.15"
  },
  "devDependencies": {
    "@types/graphql": "14.0.7",
    "@types/morgan": "1.7.35",
    "env-cmd": "8.0.2",
    "graphql-code-generator": "0.18.0",
    "graphql-codegen-typescript-common": "0.18.0",
    "graphql-codegen-typescript-resolvers": "0.18.0",
    "graphql-codegen-typescript-server": "0.18.0",
    "kill-port": "1.3.2",
    "nodemon": "1.18.10",
    "ts-node": "8.0.3",
    "typescript": "3.3.3333"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "1500",
    "events": {
      "crash": "kill-port 4997"
    },
    "watch": [
      "src"
    ],
    "ext": ".ts"
  }
}
