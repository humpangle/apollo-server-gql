{
  "name": "apollo-server-gql",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --exec \"yarn dev\" ",
    "start:debug": "nodemon --exec \"yarn debug\" ",
    "dev": "env-cmd .env.dev yarn run-migrations && env-cmd .env.dev ts-node src/index.ts",
    "debug": "env-cmd .env.dev node --inspect --debug-brk -r ts-node/register src/index.ts",
    "build": "tsc",
    "start:js": "env-cmd .env.dev node dist/index.js",
    "generate": "gql-gen && node gql.generated.edit.js",
    "generate:watch": "chokidar \"./src/graphql/**/*.graphql\" --initial --command \"yarn generate\" ",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "test": "env-cmd .env.test jest --runInBand --watch",
    "test:coverage": "env-cmd .env.test jest --runInBand --coverage",
    "run-migrations": "ts-node node_modules/.bin/typeorm migration:run",
    "make-migration": "env-cmd .env.dev ts-node node_modules/.bin/typeorm migration:generate"
  },
  "dependencies": {
    "apollo-link": "1.2.11",
    "apollo-link-http": "1.5.14",
    "apollo-link-ws": "1.0.17",
    "apollo-server-express": "2.4.8",
    "bcrypt-nodejs": "0.0.3",
    "class-validator": "0.9.1",
    "cors": "2.8.5",
    "express": "4.16.4",
    "graphql": "14.1.1",
    "graphql-import": "0.7.1",
    "graphql-iso-date": "3.6.1",
    "graphql-resolvers": "0.3.2",
    "graphql-tag": "2.10.1",
    "jsonwebtoken": "8.5.0",
    "morgan": "1.9.1",
    "node-fetch": "2.3.0",
    "pg": "7.8.2",
    "reflect-metadata": "0.1.13",
    "subscriptions-transport-ws": "0.9.16",
    "typeorm": "0.2.15",
    "ws": "6.2.0"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/graphql": "14.0.7",
    "@types/graphql-resolvers": "0.2.0",
    "@types/jest": "24.0.11",
    "@types/jsonwebtoken": "8.3.2",
    "@types/morgan": "1.7.35",
    "@types/node-fetch": "2.1.6",
    "apollo-server-testing": "2.4.8",
    "chokidar-cli": "1.2.2",
    "env-cmd": "8.0.2",
    "graphql-code-generator": "0.18.0",
    "graphql-codegen-typescript-common": "0.18.0",
    "graphql-codegen-typescript-resolvers": "0.18.0",
    "graphql-codegen-typescript-server": "0.18.0",
    "jest": "24.5.0",
    "kill-port": "1.3.2",
    "nodemon": "1.18.10",
    "ts-jest": "24.0.0",
    "ts-node": "8.0.3",
    "typescript": "3.3.3333"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "**/*.test.*"
    ],
    "delay": "3000",
    "events": {
      "crash": "kill-port 4997",
      "restart": "kill-port 4997"
    },
    "watch": [
      "src"
    ],
    "ext": ".ts,.graphql"
  }
}
